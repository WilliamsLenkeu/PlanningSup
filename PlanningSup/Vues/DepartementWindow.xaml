<Window x:Class="PlanningSup.Vues.DepartementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanningSup.Vues"
        mc:Ignorable="d"
        Title="DepartementWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Liste des Départements" FontWeight="Bold" FontSize="18" Margin="0 0 0 10"/>
            <ListBox ItemsSource="{Binding Departements}" Margin="0 0 10 10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nom}" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Ajouter Département" Click="AjouterDepartement_Click"/>
        </StackPanel>
    </Grid>
</Window>